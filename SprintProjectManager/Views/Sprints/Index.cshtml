@* @model IEnumerable<SprintProjectManager.Models.Sprint> *@
@model SprintProjectManager.Models.SprintStatusViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Log</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Sprints" asp-action="Index" method="get">
    <p>
        <label>Name: <input type="text" asp-for="SearchString" /></label>
        <label>
            Status:
            <select asp-for="SprintStatus" asp-items="Model.Statuses">
                <option value="">All</option>
            </select>
        </label>
        <input type="submit" value="Filter" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sprints![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprints![0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprints![0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprints![0].Goal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sprints![0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sprints!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
